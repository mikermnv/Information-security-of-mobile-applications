@{
    ViewData["Title"] = "Apk modifier";
}

<style>
    textarea {
        resize: both;
        overflow: auto;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Text to embed (Secret)</h2>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Download" method="post">
                <span class="text-danger">@Html.ValidationMessage("secret")</span>
                <div class="mb-3">
                    <label for="secret" class="form-label">Enter a secret (up to 10,000 characters)</label>
                    <textarea id="secret"
                              name="secret"
                              class="form-control"
                              rows="10"
                              placeholder="Enter a secret up to 10,000 characters"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
                            <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5" />
                            <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z" />
                        </svg> Download
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>